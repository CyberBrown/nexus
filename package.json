{
  "name": "nexus",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler dev --remote",
    "deploy": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler deploy && wrangler deploy --config wrangler.nexus-mcp.toml",
    "deploy:nexus": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler deploy",
    "deploy:mcp": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler deploy --config wrangler.nexus-mcp.toml",
    "db:migrate": "wrangler d1 execute nexus-db --file=./schema.sql",
    "db:migrate:remote": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler d1 execute nexus-db --file=./schema.sql --remote",
    "secret:list": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler secret list",
    "secret:put": "export $(grep -v '^#' .dev.vars 2>/dev/null | xargs) && wrangler secret put",
    "de-auth": "bun run scripts/de-auth.ts",
    "de-auth:status": "bun run scripts/de-auth.ts status",
    "de-auth:refresh": "bun run scripts/de-auth.ts refresh",
    "de-auth:deploy": "bun run scripts/de-auth.ts deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@cloudflare/workers-types": "^4.20251202.0",
    "@types/bun": "latest",
    "vitest": "^3.2.0",
    "wrangler": "^4.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "agents": "^0.2.32",
    "hono": "^4.10.7",
    "jose": "^6.1.3",
    "zod": "^4.1.13"
  },
  "overrides": {
    "@modelcontextprotocol/sdk": "1.23.0"
  }
}
